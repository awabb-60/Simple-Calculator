<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Calculator" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/gray</item>
        <item name="colorPrimaryVariant">@color/theme_color_0</item>
        <item name="colorOnPrimary">@color/gray_blue</item>

        <!-- Secondary brand color. -->
        <!-- the color of the cursor in edit text-->
        <item name="colorSecondary">@color/theme_color_0</item>
        <item name="colorOnSecondary">@color/white</item>
        <item name="colorSecondaryVariant">@color/gray_blue</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/theme_color_0</item>

        <!-- the main theme color-->
        <item name="theme_color">@color/theme_color_0</item>
    </style>

    <style name="theme1">
        <item name="colorSecondary">@color/theme_color_1</item>
        <item name="theme_color">@color/theme_color_1</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/theme_color_1</item>
    </style>

    <style name="theme2">
        <item name="colorSecondary">@color/theme_color_2</item>
        <item name="theme_color">@color/theme_color_2</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/theme_color_2</item>

    </style>

    <style name="theme3">
        <item name="colorSecondary">@color/theme_color_3</item>
        <item name="theme_color">@color/theme_color_3</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/theme_color_3</item>

    </style>


    <style name="theme4">
        <item name="colorSecondary">@color/theme_color_4</item>
        <item name="theme_color">@color/theme_color_4</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/theme_color_4</item>

    </style>

    <style name="theme5">
        <item name="colorSecondary">@color/theme_color_5</item>
        <item name="theme_color">@color/theme_color_5</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/theme_color_5</item>

    </style>


    <style name="theme6">
        <item name="colorSecondary">@color/theme_color_6</item>
        <item name="theme_color">@color/theme_color_6</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/theme_color_6</item>

    </style>

    <style name="theme7">
        <item name="colorSecondary">@color/theme_color_7</item>
        <item name="theme_color">@color/theme_color_7</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/theme_color_7</item>

    </style>

    <style name="theme8">
        <item name="colorSecondary">@color/theme_color_8</item>
        <item name="theme_color">@color/theme_color_8</item>
        <item name="android:statusBarColor" tools:targetApi="l">@color/theme_color_8</item>
    </style>

    <style name="typeLayout">
        <item name="singleLine">true</item>

        <item name="android:padding">8dp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">35sp</item>
        <item name="android:background">@null</item>
    </style>

    <style name="historyItemCardStyle">
        <item name="cardBackgroundColor">@color/white</item>
    </style>
<!--    all the key will share these attributes-->
    <style name="KeyPadButton">
        <item name="android:onClick">buttonClicked</item>
        <item name="button_background">@color/gray</item>
        <item name="android:layout_margin">0.5dp</item>
        <item name="android:layout_weight">1</item>
    </style>

<!--    the button for the portrait view-->
    <style name="CustomButtonStyle" parent="KeyPadButton">
        <item name="button_text_size">@dimen/ButtonTextSize</item>
        <item name="button_text_padding">@dimen/ButtonTextPadding</item>
    </style>

<!--    the button for the landscape view-->
    <style name="LandScapeCustomButtonStyle" parent="KeyPadButton">
        <item name="button_text_size">@dimen/landScapeButtonTextSize</item>
        <item name="button_text_padding">@dimen/landScapeButtonTextPadding</item>
    </style>

    <!--    Equals button-->
    <style name="EqualButtonStyle" parent="KeyPadButton">
        <item name="button_text_size">@dimen/ButtonTextSize</item>
        <item name="button_text_padding">@dimen/ButtonTextPadding</item>
        <item name="button_text_color">@color/white</item>
        <item name="button_background">?attr/theme_color</item>
        <item name="button_text">@string/equals</item>
    </style>

    <!--   landscape Equals button-->
    <style name="LandScapeEqualButtonStyle" parent="KeyPadButton">
        <item name="button_text_size">@dimen/landScapeButtonTextSize</item>
        <item name="button_text_padding">@dimen/landScapeButtonTextPadding</item>
        <item name="button_text_color">@color/white</item>
        <item name="button_background">?attr/theme_color</item>
        <item name="button_text">@string/equals</item>
    </style>

<!--    the backspace button-->
    <style name="BackSpaceButton" parent="KeyPadButton">
        <item name="android:src">@drawable/ic_backspace</item>
        <item name="android:background">@drawable/backspace_button_background</item>
        <item name="contentDescription">@string/backspace</item>
        <item name="android:scaleType">center</item>
    </style>

    <style name="tableRow">
        <item name="android:background">@color/white</item>
    </style>

    <style name="SettingsActivity">
        <item name="android:background">@color/gray</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="SettingsCard">
        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:layout_margin">5dp</item>
        <item name="cardCornerRadius">10dp</item>
    </style>
</resources>